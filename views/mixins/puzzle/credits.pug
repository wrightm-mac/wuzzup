mixin credits(puzzle)

  div.puzzle-publish-info
    span= puzzle.published ? "published" : "updated"
    | &nbsp;by&nbsp;
    a(href='/user.html?u=' + puzzle.username).puzzle-blurb-username= puzzle.username
    | &nbsp;at&nbsp;
    span.puzzle-blurb-date= dateformat.prettyDateTime(puzzle.published ? puzzle.publishedAt : puzzle.updatedAt)